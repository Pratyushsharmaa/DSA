// Online C++ compiler to run C++ program online
#include <iostream>
using namespace std;

int main() {
    // Write C++ code here
    int a,b;
    char op;
       cout<<"Enter value of a: " <<endl;
       cin>> a;
       cout<<"Enter value of b: " <<endl;
       cin>> b;
       cout<<"Enter operation to be performed: "<<endl;
       cin>> op;
       
       switch(op){
           case '+': cout<< a+b << endl;
                     break;
           
           case '-': cout<< a-b << endl;
                     break;
           
           case '*': cout<< a*b << endl;
                     break;
           
           case '/': cout<< a/b << endl;
                     break;
           default: cout << "Wrong operation" << endl;
                    break;
           
       }
        
    
    
    
   
}
